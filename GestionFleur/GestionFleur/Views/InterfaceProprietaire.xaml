<Window x:Class="GestionFleur.Views.InterfaceProprietaire"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionFleur.Views"
        mc:Ignorable="d"
        Title="InterfaceProprietaire" Height="700" Width="1000"
        WindowStartupLocation = "CenterScreen">
    <Grid>
        <TabControl>
            <TabItem Header="Fournisseur">
                <StackPanel Orientation="Horizontal">
                    <DataGrid 
                        ItemsSource="{Binding ToutesLesFleurs}"
                        AutoGenerateColumns="False" CanUserResizeColumns="False"
                        SelectedItem="{Binding FleurSelectionnee, Mode=TwoWay}"
                        Width="555"
                        HorizontalAlignment="Left"
                        Background="MintCream">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Nom" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Nom, UpdateSourceTrigger=PropertyChanged}"
                                            FontSize="18" FontFamily="Carlito"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Prix Unitaire (CAD)" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding PrixUnitaire, UpdateSourceTrigger=PropertyChanged}"
                                            FontSize="18" FontFamily="Carlito"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Quantité" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Quantite, UpdateSourceTrigger=PropertyChanged}"
                                            FontSize="18" FontFamily="Carlito"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Quantité à ajouter" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox Text="{Binding QuantiteEnAttente, UpdateSourceTrigger=PropertyChanged}"
                                                FontSize="18" FontFamily="Carlito" Width="100"/>
                                            <Button Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.AjouterFleurCommande}" CommandParameter="{Binding}" 
                                                Content="Ajout"
                                                Background="LightGreen"
                                                FontSize="18" FontFamily="Carlito" Width="100"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Command="{Binding BoutonRetourCommande}"           
                        Content="Retour"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="170"
                        Height="50" Width="110"
                        FontSize="18" FontFamily="Carlito"
                        Background="SeaGreen"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Gérer Commande">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Commandes:" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Margin="5,5,5,5" />
                    <ListView ItemsSource="{Binding ListeCommandes.Commandes, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Id" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding CommandeId, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Total (CAD)" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding TotalTransaction, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Paiement effectué?" Width="105">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding PaiementEffectue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="5"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListView}}, Path=DataContext.GenererFactureCommand}" CommandParameter="{Binding}" Content="Génération Facture" Margin="5" FontSize="18" FontFamily="Carlito" Background="LightGreen"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListView}}, Path=DataContext.SupprimerCommandeCommand }" CommandParameter="{Binding}" Content="Annuler" Margin="5" FontSize="18" FontFamily="Carlito" Background="LightGreen"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Command="{Binding BoutonRetourCommande}" Grid.Row="5" Grid.Column="3" Content="Retour" Margin="5,5,5,5" FontSize="18" FontFamily="Carlito" Background="SeaGreen"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
