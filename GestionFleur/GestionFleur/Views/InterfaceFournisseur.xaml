<Window x:Class="GestionFleur.Views.InterfaceFournisseur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionFleur.Views"
        mc:Ignorable="d"
        Title="InterfaceFournisseur" Height="700" Width="1000"
        WindowStartupLocation = "CenterScreen">
    <Grid>
        <DataGrid Margin="0,0,0,50"
                    ItemsSource="{Binding ToutesLesFleurs}"
                    AutoGenerateColumns="False" CanUserResizeColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding ToutesLesFleurs.Nom}"/>
                <DataGridTextColumn Header="Prix Unitaire" Binding="{Binding PrixUnitaire}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Retour" Command="{Binding BoutonRetourCommande}" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
    </Grid>
</Window>
